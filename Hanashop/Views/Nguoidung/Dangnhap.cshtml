
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div class="container">
    <div class="row">

        <div class="col-md-9">
            <h4 style="color:red; text-align:center"> @ViewBag.Thongbao</h4>
            <table align="center">
                <h3 style="text-align:center;color:white">ĐĂNG NHẬP</h3>
                @using (Html.BeginForm())
                {
                @Html.ValidationSummary(true)
                    <tr style="height:40px">
                        <td style="color: white"> Tên đăng nhập:</td>
                        <td>
                            @Html.TextBox("TenDN")
                            @ViewData["Loi1"]
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td style="color: white">  Mật khẩu:</td>
                        <td>
                            @Html.Password("Matkhau")
                            @ViewData["Loi2"]
                        </td>
                    </tr>
                    <tr style="height:40px">

                        <td>
                            <input type="Submit" value="Đăng nhập" class="btn btn-default" />

                        </td>
                        <td>
                            <div>
                                @Html.ActionLink("Chưa có tài khoản ?", "Dangky")
                            </div>
                        </td>

                    </tr>

                    <tr style="height:40px">
                        <td style="color: white"></td>
                        <td></td>
                        <td></td>
                    </tr>

                }
            </table>

        </div>
    </div>

</div>