

<style type="text/css">
    #Datmua a {
        clear: both;
        background-color: red;
        color: white;
        width: 120px;
        height: 35px;
        display: block;
        float: right;
        text-align: center;
        padding-top: 10px;
        text-decoration: none;
        font-weight: bold;
    }

        #Datmua a:hover {
            background-color: gray;
            color: red;
        }
</style>
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-3">

            @Html.Action("Chudemenu", "Trangchu")

            @Html.Action("Nhasanxuatmenu", "Trangchu")


        </div>
        <div class="col-md-9">
            <h3 style="color: white"> THÔNG TIN CHI TIẾT QUẦN ÁO</h3>
            <div>
                <div style="width:40%; float:left; border-left: dotted 1px; border-color:azure">
                    <img src="~/images/@Model.Anhbia" width="100%" />
                </div>
                <div style="width:60%; float:left; padding:10px">
                    <h4 style="font-weight: bold; color: white">Tên Quần Áo: @Model.TenQA </h4>
                    <p style="text-align:justify;color:white"><span style="font-weight: bold; color: white"> Mô tả: </span>@Model.Mota </p>
                    <p style="font-weight: bold; color: white"> Giá bán: <span style="color: white; font-size: 16pt;"> @String.Format("{0:0,0}", Model.Giaban) VNĐ </span></p>
                </div>
                <div>
                    <div id="Datmua">
                        <a href="@Url.Action("ThemGiohang", "GioHang", new { @iMasach= @Model.MaQA, @strURL=Request.Url.ToString() })" class="list-group-item">
                            ĐẶT MUA
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
