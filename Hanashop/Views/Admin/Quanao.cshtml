
@using Hanashop.Models
@using PagedList.Mvc
@model PagedList.PagedList<Hanashop.Models.QUANAO>
@{
    ViewBag.Title = "Quanao";
    Layout = "~/Views/Shared/layoutadmin.cshtml";
}

<h2>Quản lý thông tin quần áo</h2>

<p>
    @Html.ActionLink("Thêm mới", "Themmoiquanao")
</p>

<table class="table" border="1">
    <tr>
        <th style="width:150px">
            Tên Quần Áo
        </th>
        <th style="width:100px">
            Giá Bán
        </th>
        <th style="width:200px">
            Mô Tả
        </th>
        <th style="width:200px">
            Ảnh Bìa
        </th>
        <th style="width:100px">
            Ngày Cập Nhật
        </th>
        <th style="width:50px">
            Số Lượng Tồn
        </th>
        <th style="width:50px">
            Mã Chủ Đề
        </th>
        <th style="width:50px">
            Mã Nhà Xuất Bản
        </th>
        <th style="width:150px"></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenQA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Giaban)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Mota)
        </td>
        <td>
            <img src="@Url.Content("~/images/"+ item.Anhbia)" width="50%" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ngaycapnhat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Soluongton)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaCD)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaNXB)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Sua", new { id = item.MaQA }) |
            @Html.ActionLink("Chi tiết", "Chitietquanao", new { id = item.MaQA }) |
            @Html.ActionLink("Xóa", "Xoa", new { id = item.MaQA })
        </td>
    </tr>
    }

</table>

Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;
<div class="MenuTrang">
    @Html.PagedListPager(Model, page => Url.Action("QuanAo", new { page = page }))
</div>
<style>
    .MenuTrang li {
        display: inline;
    }
</style>
