@model IEnumerable<Hanashop.Models.CHUDE>

@{
    ViewBag.Title = "Chude";
    Layout = "~/Views/Shared/layoutadmin.cshtml";
}

<h2>Quản lý chủ đề</h2>

<p>
    @Html.ActionLink("Thêm Chủ đề", "themcd")
</p>
<table class="table">
    <tr>
        <th>
            Tên Chủ đề
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenChuDe)
        </td>
        <td>
            @Html.ActionLink("Sửa", "suacd", new { id = item.MaCD }) |
            @Html.ActionLink("Xóa", "xoacd", new { id = item.MaCD })
        </td>
    </tr>
    }

</table>
