
@using Hanashop.Models
@model List<Giohang>

@{
    ViewBag.Title = "ĐƠN ĐẶT HÀNG";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-md-3">

            @Html.Action("Chudemenu", "Trangchu")

            @Html.Action("Nhasanxuatmenu", "Trangchu")


        </div>
        <div class="col-md-9">
            <h2 style="text-align:center;color:white">THÔNG TIN HÀNG HÓA</h2>


            <table align="center" border="1" style="color: white">
                <tr style="text-align:center; font-weight:bold">
                    <td style="color:white">  Mã quần áo </td>
                    <td style="color:white"> Tên quần áo </td>
                    <td style="color:white"> Ảnh bìa </td>
                    <td style="color:white"> Số lượng </td>
                    <td style="color:white"> Đơn giá </td>
                    <td style="color:white"> Thành tiền </td>
                </tr>
                @foreach (var item in Model)
                {
                <tr style="text-align:center; font-weight:bold">
                    <td style="color:white"> @item.iMasach </td>
                    <td style="color:white"> @item.sTensach</td>
                    <td><img src="~/images/@item.sAnhbia" width="50%"></td>
                    @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSp = item.iMasach }))
                    {
                    <td style="color:white">
                        @item.iSoluong
                    </td>
                            <td style="color:white">@String.Format("{0:0,0}", item.dDongia) </td>
                            <td style="color:white">@String.Format("{0:0,0}", item.dThanhtien) </td>
                    }
                </tr>
                }
                <tr style="font-weight: bold; text-align:right; color:white">
                    <td colspan="3" style="color:white"> Số lượng Quần Áo: @ViewBag.Tongsoluong </td>
                    <td colspan="3" style="color:white"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
                </tr>
                <tr style="font-weight: bold; color:blue; text-align:right ">
                    <td colspan="6" style="color:white">
                        @Html.ActionLink("TRỞ VỀ GIỎ HÀNG", "Giohang", "GioHang")
                    </td>
                </tr>
            </table>


        </div>
    </div>
</div>


<h2 style="text-align:center; color:white">THÔNG TIN ĐẶT HÀNG</h2>


<div class="container">
    <div class="row">

        <div class="col-md-9">


            @{
                KHACHHANG kh = (KHACHHANG)Session["Taikhoan"];
            }
            <table align="center" style="color:white">
                @using (Html.BeginForm())
                {
                @Html.ValidationSummary(true)
                    <tr style="height:40px">
                        <td style="color:white"> Họ tên khách hàng:</td>
                        <td style="font-weight:bold; color:white">  @kh.HoTen </td>
                    </tr>
                    <tr style="height:40px">
                        <td style="color:white"> Địa chỉ:</td>
                        <td style="font-weight:bold; color:white">  @kh.DiachiKH </td>
                    </tr>
                    <tr style="height:40px">
                        <td style="color:white"> Địện thoại:</td>
                        <td style="font-weight:bold; color:white">  @kh.DienthoaiKH </td>
                    </tr>
                    <tr style="height:40px">
                        <td style="color:white"> Ngày đặt:</td>
                        <td style="font-weight:bold; color:white"> @DateTime.Now.ToShortDateString() </td>
                    </tr>
                    <tr style="height:40px">
                        <td style="color:white"> Ngày giao hàng:</td>
                        <td style="font-weight: bold;color:black">
                            <input type="date" name="Ngaygiao" />
                        </td>
                    </tr>
                    <tr style="height:40px">
                        <td></td>
                        <td style="color:black">
                            <input type="Submit" value="ĐỒNG Ý ĐẶT HÀNG" />
                        </td>
                    </tr>
                }
            </table>

        </div>
    </div>
</div>
