@using Hanashop.Models
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-3">

            @Html.Action("Chudemenu", "Trangchu")

            @Html.Action("Nhasanxuatmenu", "Trangchu")


        </div>
        <div class="col-md-9">
            <h2 style="text-align:center;color:white">THÔNG TIN GIỎ HÀNG</h2>
            <table align="center" border="1">
                <tr style="text-align:center; font-weight:bold">
                    <td style="color: white">  Mã quần áo </td>
                    <td style="color: white"> Tên quần áo </td>
                    <td style="color: white"> Ảnh bìa </td>
                    <td style="color: white"> Số lượng </td>
                    <td style="color: white"> Đơn giá </td>
                    <td style="color: white"> Thành tiền </td>
                    <td width="50px" style="color: white"></td>
                    <td width="50px" style="color: white"></td>
                    <td width="50px" style="color: white"></td>
                </tr>
                @foreach (var item in Model)
                {
                <tr style="text-align:center; font-weight:bold">
                    <td style="color: white"> @item.iMasach </td>
                    <td style="color: white"> @item.sTensach</td>
                    <td><img src="~/images/@item.sAnhbia" width="75%"></td>
                    @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSp = item.iMasach }))
                    {
                    <td>
                        <input type="number" min="1" name="txtSoluong" value="@item.iSoluong" style="background-color:yellow" />
                    </td>
                            <td style="color: white">@String.Format("{0:0,0}", item.dDongia) </td>
                            <td style="color: white">@String.Format("{0:0,0}", item.dThanhtien) </td>
                            <td style="color: white"> <a href="@Url.Action("Details", "Trangchu", new { id = item.iMasach })"> Chi tiết </a></td>
                            <td style="color: white"> @Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSp = item.iMasach })</td>
                            <td style="color: blue"> <input type="submit" value="Cập Nhật" /></td>
                    }
                </tr>
                }
                <tr style="font-weight: bold; text-align:right; color:red">
                    <td colspan="4" style="color: white"> Số lượng Quần Áo: @ViewBag.Tongsoluong </td>
                    <td colspan="5" style="color: white"> Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VNĐ </td>
                </tr>
                <tr style="font-weight: bold; color:blue; text-align:right ">
                    <td colspan="9">
                        @Html.ActionLink("Xóa Giỏ Hàng", "XoaTatcaGiohang")
                    </td>
                </tr>
                <tr style="font-weight: bold; color:blue; text-align:right ">
                    <td colspan="9" align="center">
                        @Html.ActionLink("ĐẶT HÀNG", "Dathang", "GioHang")
                    </td>
                </tr>
            </table>
        </div>
    </div>

</div>

